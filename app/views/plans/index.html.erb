<h1>Listing plans</h1>

<table>
  <tr>
    <th>Bedrooms</th>
    <th>Sqfoot</th>
    <th>Levels</th>
    <th>Bathrooms</th>
    <th>Price range</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.bedrooms %></td>
    <td><%= plan.sqfoot %></td>
    <td><%= plan.levels %></td>
    <td><%= plan.bathrooms %></td>
    <td><%= plan.price_range %></td>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

