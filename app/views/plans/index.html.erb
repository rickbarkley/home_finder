
<%- model_class = Plan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= search_form_for @q do |f| %>
<div class="field span5">
<%= f.label :sqfoot_gteq, "Square Footage Between" %>
<%= f.text_field :sqfoot_gteq %>
<%= f.label :sqfoot_lteq, "and" %>
<%= f.text_field :sqfoot_lteq %>

<%= f.label :bedrooms_eq, "Bedrooms" %>
<%= f.select :bedrooms_eq, options_for_select([[''],['1', 1], ['2', 2],['3', 3],['4', 4]]), :class => 'select_field' %>

  <%= f.label :bathrooms_eq, "Bathrooms" %>
<%= f.select :bathrooms_eq, options_for_select([[''],['1', 1], ['2', 2],['3', 3],['4', 4]]), :class => 'select_field' %>
	
	  <%= f.label :half_bath_eq, "Half-Bathrooms" %>
	<%= f.select :half_bath_eq, options_for_select([[''],['1', 1], ['2', 2],['3', 3]]), :class => 'select_field'  %>
	</div>
<div class="field span5">
	<%= f.label :living_eq, "Number of Living Areas" %>
	<%= f.select :living_eq, options_for_select([[''],['1', 1], ['2', 2],['3', 3],['4', 4]]), :class => 'select_field' %>	
	
	<%= f.label :dining_eq, "Number of Dining Areas" %>
	<%= f.select :dining_eq, options_for_select([[''],['1', 1], ['2', 2],['3', 3],['4', 4]]), :class => 'select_field' %>
	
	<%= f.label :stories_eq, "Levels" %>
	<%= f.select :stories_eq, options_for_select([[''],['Single-Story', 1], ['Multi-Story', 2]]), :class => 'select_field' %>
	
	<%= f.label :suite_eq, "Owners' Suite Location" %>
	<%= f.select :suite_eq, options_for_select([[''],['Any Level', 1], ['Primary Level', 2],['Secondary Level', 3]]), :class => 'select_field' %>
<p>
  <%= f.submit %>

<%= link_to "Start Over", "/plans" %></p><br /><br /><br />
</div>
<% end %>
<div class="border span12"><p></p></div>
<div class="image span5">
    <% @plans.each do |plan| %>
<%= link_to image_tag(plan.drawing.url(:medium)), plan_path(plan) %>
</div>
<% end %>
<div class="border span12"><p></p></div>
<div class="new-button span12">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_plan_path,
            :class => 'btn btn-primary' %><br /><br />
</div>
