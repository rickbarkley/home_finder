
<%- model_class = Plan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<h3><%= link_to " Back", '/plans' %></h3>

<dl class="dl-horizontal">
	<dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @plan.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bedrooms) %>:</strong></dt>
  <dd><%= @plan.bedrooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sqfoot) %>:</strong></dt>
  <dd><%= @plan.sqfoot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stories) %>:</strong></dt>
  <dd><%= @plan.stories %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bathrooms) %>:</strong></dt>
  <dd><%= @plan.bathrooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_range) %>:</strong></dt>
  <dd><%= @plan.price_range %></dd>
  <dt><strong><%= model_class.human_attribute_name(:drawing) %>:</strong></dt>
<div><br /><br /><br /><br /><center>
<p><%= image_tag @plan.drawing.url %></p></center>
</div>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              plans_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_plan_path(@plan), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              plan_path(@plan),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
