<%= form_for @plan, :html => { :multipart => true } do |f| %>
<div class="control-group">
    <%= f.label :name, "Plan Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'number_field' %>
    </div>
  <div class="control-group">
    <%= f.label :bedrooms, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bedrooms, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :living, "Living Areas", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :living, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sqfoot, "Square Footage", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sqfoot, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stories, "Levels", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :stories, options_for_select([['Single-Story', 1], ['Multi-Story', 2]]), :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :suite, "Owners' Suite Location", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :suite, options_for_select([['Any Level', 1], ['Primary Level', 2],['Secondary Level', 3]]), :class => 'select_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :bathrooms, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bathrooms, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :half_bath, "Half-Bathrooms", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :half_bath, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dining, "Half-Bathrooms", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :dining, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
	   <%= f.label :drawing, "Upload Plan PDF", :class => 'control-label' %>
<%= f.file_field :drawing %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                plans_path, :class => 'btn' %>
  </div>
<% end %>
