<%= form_for @plan, :html => { :multipart => true } do |f| %>
<div class="control-group">
    <%= f.label :name, "Plan Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'number_field' %>
    </div>
  <div class="control-group">
    <%= f.label :bedrooms, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bedrooms, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sqfoot, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sqfoot, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :levels, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :levels, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bathrooms, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bathrooms, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price_range, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price_range, :class => 'number_field' %>
    </div>
  <div class="control-group">
	   <%= f.label :drawing, "Upload Plan PDF", :class => 'control-label' %>
<%= f.file_field :drawing %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                plans_path, :class => 'btn' %>
  </div>
<% end %>
